{
    "name": "datagaze-all-in-one",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "type": "commonjs",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "migration:run": "knex migrate:latest --knexfile dist/src/database/knexfile.js",
        "migration:rollback": "knex migrate:rollback --knexfile dist/src/database/knexfile.js",
        "seed:run": "knex seed:run --knexfile dist/src/database/knexfile.js"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.0",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.10",
        "@nestjs/platform-socket.io": "^11.0.11",
        "@nestjs/swagger": "^11.0.6",
        "@nestjs/websockets": "^11.0.11",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.4.7",
        "jose": "^5.9.6",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.1.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.13.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "ssh2": "^1.16.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.21.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/serve-static": "^5.0.3",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.7",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.7",
        "@types/ssh2": "^1.15.4",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.15.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.25.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
